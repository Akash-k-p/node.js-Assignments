<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>


    </style>
</head>
<body>
    <%- include('./partials/header')  %>
    <h1>Employee details</h1>
    <table border="1" style="border-collapse: collapse;">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th style="border: 1px solid black; padding: 8px;">Email</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% allemployeesDetails.forEach(emp => { %>
            <tr>
                <td>
                    <%= emp.first_name %> 
                </td>
                <td>
                    <%= emp.last_name %> 
                </td>
                <td style="border: 1px solid black; padding: 8px;"><%= emp.email %>    
                    <!-- <div class="buttons">      -->
                    <!-- <button>Update</button>
                    <button>Delete</button></div>   -->
                </td>
                <td>
                    <a href="/web/employees/update?eid=<%=emp._id%>">Update</a>
                </td>
                <td>
                    <a href="http://localhost:8000/web/employees/delete?eid=<%=emp._id%>">Delete</a>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    <%- include('./partials/footer')  %>
     
</body>
</html>
